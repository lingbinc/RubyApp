<h1>Tasklists</h1>
<table>
	<tr>
		<td>title</td>
		<td>course</td>
		<td>user</td>
	</tr>
	<% @task_lists.each do |task_list| %>
	<tr>
		<td><%= task_list.title %></td>
		<td><%= task_list.course.name %></td>
		<td><%= task_list.user.name %></td>
		<td><%= link_to "show task", tasklist_path(task_list.id) %></td>
		<td><%= link_to "edit task", edit_tasklist_path(task_list.id) %></td>
		<td><%= link_to "destroy task", task_list, confirm:"Do you really want to delete?", method: :delete %></td>
	</tr>
	<%end%>
</table>