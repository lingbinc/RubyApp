<h1 class='page_name'>Edit Task</h1>
<div class='add_form'>
<%= form_for(@task_list) do |f| %>
	<div class="field">
		<h3>title</h3>
		<%=f.text_field :title%>
		<% if (@task_list.errors.include?(:title)) %>
			<li class='error-msg'><%= @task_list.errors[:title]%></li>
		<%end%>
	</div>
	<div class="field">
		<h3>course</h3>
		<%=f.collection_select :course_id, Course.all, :id, :name %>
	</div>
	<div class="field">
		<h3>user</h3>
		<%= f.collection_select :user_id, User.all, :id, :name %>
	</div>

	<div class="actions">
		<%= f.submit 'Edit Task', :class => 'submit_button'%>
	</div>
<%end%>
</div>
