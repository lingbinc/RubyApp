<h1 class='page_name'>Edit Courses</h1>
<div class='add_form'>
<%= form_for(@course) do |f| %>
	<div class="field">
		<h3>name</h3>
		<%= f.text_field :name%>
		<% if (@course.errors.include?(:name)) %>
			<li class='error-msg'><%= @course.errors[:name]%></li>
		<%end%>
	</div>
	<div class="field">
		<h3>difficulty</h3>
		<%= f.text_field :difficulty%>
	</div>
	<div class="actions">
		<%= f.submit 'Edit Course',:class => 'submit_button'%>
	</div>
<% end %>
</div>