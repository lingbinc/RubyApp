<div class='wrapper'>
	<h1 class='page_name'>Edit Courses</h1>
	<%= form_for(@course) do |f| %>
		<div class="field">
			<h3>Title</h3>
			<%= f.text_field :name, :class => "text-line-upper"%>
			<% if (@course.errors.include?(:name)) %>
				<li class='error-msg'><%= @course.errors[:name]%></li>
			<%end%>
		</div>
		<div class="field">
			<h3>Course Description</h3>
			<%= f.text_area :description, :class => "text-box"%>
		</div>
		<div class="field">
			<h3>Difficulty</h3>
			<%= f.select( :difficulty, Course::DIFFICULTY_LEVEL) %>
		</div>
		<div class="actions">
			<%= f.submit 'Edit Course',:class => 'button-large-cta'%>
		</div>
	<% end %>
</div>